/ Carrousel ============================
#carousel.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#carousel"}
    %li{"data-slide-to" => "1", "data-target" => "#carousel"}
    %li{"data-slide-to" => "2", "data-target" => "#carousel"}
  .carousel-inner{:role => "listbox"}
    .item.active
      = image_tag("SOAT.jpg", alt: "First slide", class: "first-slide")
      .container
        .carousel-caption
          %a.btn.btn-lg.btn-primary{href: "#{new_user_session_path}", :role => "button"} Ingresar
    .item
      = image_tag("SOAT.jpg", alt: "Second slide", class: "second-slide")
    .item
      = image_tag("SOAT.jpg", alt: "Third slide", class: "third-slide")
  %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#carousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
